{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug full-stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run dev",
      "skipFiles": ["<node_internals>/**", ".next", ".velite"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:\\s+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      }
    }
  ]
}
