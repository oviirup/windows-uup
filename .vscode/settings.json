{
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "editor.formatOnSave": true,
  "explorer.sortOrder": "type",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll.eslint": "explicit"
  },
  "css.validate": false,
  "scss.validate": false,
  // file nesting
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": ".nvmrc, .npm*, bun.lockb, bun.lock, pnpm*",
    "*.js": "${capture}.*.js, ${capture}.d.ts",
    "*.ts": "${capture}.*.ts, ${capture}.*.js, ${capture}.d.ts",
    "*.tsx": "${capture}.*.tsx, ${capture}.*.ts, ${capture}.*.js"
  },
  // tailwind support for cva and classNames
  "tailwindCSS.classAttributes": ["className", "\\w+ClassName"],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  // prettier-ignore
  "cSpell.words": [
    "envalid","hookform","inter","rehype","tailwindcss","webp","zod","shiki",
    "sonner","qrcode","popover","stylesheet","pluggables",
  ]
}
